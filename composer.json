{
    "name": "decodelabs/metamorph",
    "description": "A flexible framework for content transformations",
    "type": "library",
    "keywords": [ "render", "transform", "content" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/archetype": "^0.3",
        "decodelabs/coercion": "^0.2",
        "decodelabs/exceptional": "^0.5",
        "decodelabs/tagged": "^0.16"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7",

        "soundasleep/html2text": "^1.1|^2",
        "erusev/parsedown": "^1.7",
        "michelf/php-markdown": "^1.9|^2"
    },
    "suggest": {
        "erusev/parsedown": "Add support for Markdown parsing",
        "michelf/php-markdown": "Alternative Markdown parsing provider",
        "soundasleep/html2text": "Better HTML to text conversion"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DecodeLabs\\Metamorph\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.6.x-dev"
        },
        "effigy": {
            "exports": [
                "phpstan-extension.neon"
            ]
        },
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "repositories": {
    }
}
