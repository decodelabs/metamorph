{
    "name": "decodelabs/metamorph",
    "description": "A flexible framework for content transformations",
    "type": "library",
    "keywords": ["render", "transform", "content"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",
        "symfony/polyfill-php80": "^1.22",

        "decodelabs/archetype": "^0.1",
        "decodelabs/coercion": "^0.1",
        "decodelabs/glitch-support": "^0.3",
        "decodelabs/exceptional": "^0.3",
        "decodelabs/tagged": "^0.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.5",
        "symplify/easy-coding-standard": "^10",

        "soundasleep/html2text": "^1.1",
        "erusev/parsedown": "^1.7",
        "michelf/php-markdown": "^1.9"
    },
    "suggest": {
        "erusev/parsedown": "Add support for Markdown parsing",
        "michelf/php-markdown": "Alternative Markdown parsing provider",
        "soundasleep/html2text": "Better HTML to text conversion"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
